#!/usr/bin/env planck
(ns planck.clean
  (:require [planck.shell :refer [sh *sh-dir*]]))

; ClojureScript
(binding [*sh-dir* "planck-cljs"]
  (sh "bash" "script/clean")
  (sh "bash" "script/clean-bundle")
  (sh "bash" "script/clean-bundle-c"))

; Xcode
(sh "rm" "-rf" "build")

; Site
(binding [*sh-dir* "site"]
  (sh "/usr/local/bin/planck" "script/clean"))
